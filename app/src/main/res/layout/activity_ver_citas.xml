<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_deep_purple_350"
    android:padding="16dp"
    tools:context=".views.VerCitas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/title_bar_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/page_title"
            android:text="Citas"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textColor="@color/md_white_1000"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/btnSalirCitas"
            android:src="@drawable/icono_close"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Abrir menÃº de opciones"
            />

    </RelativeLayout>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewhome"
        android:layout_width="355dp"
        android:layout_height="60dp"
        android:layout_below="@id/title_bar_layout"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_note"
        app:iconifiedByDefault="false"
        app:queryBackground="@null"
        app:queryHint="Buscar cliente" />

    <Spinner
        android:id="@+id/spinnerTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:spinnerMode="dialog"
        android:layout_below="@id/searchViewhome"
        android:background="@drawable/borderspiner"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinnerTime"
        android:layout_marginTop="22dp"
        android:padding="1dp" />
</RelativeLayout>
